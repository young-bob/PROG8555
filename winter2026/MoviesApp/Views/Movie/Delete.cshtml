@model MoviesApp.Models.Movie

@{
    ViewData["Title"] = "Delete Movie";
}

<h2 class="text-center text-white bg-danger p-3 my-3">Are you sure you want to delete this movie?</h2>

<div class="row">
    <div class="col-md-6 offset-md-3">
        <div class="card text-center">
            <h4 class="card-title mt-2">@Model.Title</h4>
            <img src="/image/@Model.ImgUrl" class="card-img-top m-auto" style="width: 200px;" alt="@Model.Title" />
            
            <div class="card-body">
                <p><strong>Release Year:</strong> @Model.ReleaseYear</p>
                <p><strong>Genre:</strong> @Model.Genre</p>
                
                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <input type="submit" value="Delete" class="btn btn-danger" />
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                </form>
            </div>
        </div>
    </div>
</div>
