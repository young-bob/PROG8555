@model IEnumerable<MoviesApp.Models.Movie>

@{
    ViewData["Title"] = "Movies List";
}

<h2 class="text-center text-white bg-primary p-3 my-3">Movies List</h2>

<div class="mb-3">
    <a asp-action="Add" class="btn btn-success">Add New Movie</a>
</div>

<table class="table table-striped table-bordered">
    <thead class="thead-dark text-center">
        <tr>
            <th>Title</th>
            <th>Release Year</th>
            <th>Genre</th>
            <th>Poster</th>
            <th>Actions</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var movie in Model)
        {
            <tr class="text-center">
                <td>@movie.Title</td>
                <td>@movie.ReleaseYear</td>
                <td>@movie.Genre</td>
                <td>
                    <a asp-action="GetById" asp-route-id="@movie.Id">
                        <img src="/image/@movie.ImgUrl" style="width:80px;height:80px" />
                    </a>
                </td>
                <td>
                    <a asp-action="EditItem" asp-route-id="@movie.Id" class="btn btn-warning">Edit</a>
                    <a asp-action="DeleteItem" asp-route-id="@movie.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>